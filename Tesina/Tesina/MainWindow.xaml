<Window x:Class="Tesina.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tesina"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        
        <Viewbox x:Name="kinectBodyViewbox">
            <Image x:Name="Camera" Source="{Binding ImageSource}" Stretch="UniformToFill" />
        </Viewbox>
        <TextBlock x:Name="Word" Text="Probando" TextWrapping="Wrap" Margin="5 10 5 5" FontFamily="Segoe UI" FontSize="14"/>
    </Grid>
</Window>
